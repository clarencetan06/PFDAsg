@model IEnumerable<PFD_Assignment.Models.PostViewModel>

<div>
    @using (Html.BeginForm("Index","Guide",FormMethod.Post))
    {
        <table id="Post">
            <tr>
                <td>
                    <span><b></b>Search By:</span>
                    @Html.RadioButton("searchBy","PostTitle",true)
                    <text>Title</text>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("searchValue",null, new{Class="form-control",placeholder="Enter Guide Title"})
                </td>

                <td>
                    <input type="submit" value="Search" class=" btn btn-success"/>
                </td>
            </tr>
        </table>
    }
</div>
<br />
<a href="#" id="sort-newest">Sort Newest to Oldest</a> |
<a href="#" id="sort-oldest">Sort Oldest to Newest</a>



@if (Model.ToList().Count > 0)
{
    <div class="guidecontent" id="guidecontent">
        @foreach (var item in Model)
        {
            <div class="guides" id="guides" data-date="@item.DateofPost.ToString()">
                <div>
                    <p class="guideUser">
                        <b> @item.Username.ToString() </b>| @item.DateofPost.ToString()
                    </p>
                    <p class="guidePara">
                        Title: @item.PostTitle.ToString()
                    </p>
                    <p class="guidePara">
                        Description: @item.PostDesc.ToString()
                    </p>
                    <p class="guideVotes">
                        Upvotes: @item.Upvote.ToString() |
                        Downvotes: @item.Downvote.ToString()
                    </p>
                </div>

                <div class="guidebuttonposition" id="guidebuttonposition">
                    <button class="guideButton" id="guideButton">
                    View 
                    </button>
                </div>
            </div>

        }
    </div>
    
    <div class="table-responsive">
		<table id="viewPost" class="table table-striped table-bordered">
		<thead class="table-dark">
		<tr>
		<th>Post ID</th>
		<th>Title</th>
		<th>Post Description</th>
		<th>Post Content</th>
		<th>Upvote</th>
		<th>Downvote</th>
		<th>Date of Post</th>
		<th>MemberID</th>
		<th></th>
		</tr>
		</thead>
		<tbody>
				@foreach (var item in Model)
				{
				<tr>
						<td>@item.PostID.ToString()</td>
						<td>@item.PostTitle.ToString()</td>
						<td>@item.PostDesc.ToString()</td>
						<td>@item.PostContent.ToString()</td>
						<td>@item.Upvote.ToString()</td>
						<td>@item.Downvote.ToString()</td>
						<td>@item.DateofPost.ToString()</td>
						<td>@item.MemberID.ToString()</td>

				
				
				</tr>
				}
		</tbody>
		</table>
		</div>
}
else
{
		<span style="color:red">No record found!</span>
}
 