@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!DOCTYPE html>
<html>
<body>
	<h2 style="text-align: center">Notification</h2>
    <div class="w3-content" style="max-width:400px">
        @* <div class="mySlides w3-container w3-red">
            <h1><b>Did You Know?</b></h1>
            <h1><i>We plan to sell trips to the moon in the 2020s</i></h1>
        </div>
        <img class="mySlides" src="~/images/sgbackground.jpg" style="width:100%">
        <img class="mySlides" src="~/images/sgbackground2.jpg" style="width:100%"> *@
        
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <div class="mySlides w3-container w3-red">
                    <h1><b>@item.AnnouncementTitle</b></h1>
                    <h1><i>@item.AnnouncementContent</i></h1>
                </div>
            }
        }
        else
        {
            <p>No announcements available.</p>
        }
	</div>
    <div class="home">
        <img class="bgimg" src="~/images/sgbackground.jpg"></img>
        <div class="content">
            <h2 id="title" class="title" style="font-size:50px"><b>SG Handbook</b></h2>
            <p class="para" style="font-size:23px;">
                A simple one stop handbook for the elderly
            </p>

        </div>
    </div>
    <div class="aboutUs" id ="aboutUs">
        <div class="content">
            <b>
                <h2 id="title" class="title">About Us</h2>
                <p class="aboutPara">
                    We are SG Handbook, a simple one stop handbook that aims to help you answer any questions you may have.
                     If you have questions, we have the answers.
                </p>
                <h3 id="title" class="title">Contact</h3>
                <p class="aboutContact">
                    (+65) 9999 9999
                </p>
                <h3 id="title" class="title">Email</h3>
                <p class="aboutEmail">
                    SGHandbook@gmail.com 
                </p>
            </b>
        </div>
    </div>
</body>
</html>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert('@TempData["SuccessMessage"]');
    </script>
}

<script>
    var myIndex = 0;
    carousel();

    function carousel() {
        var i;
        var x = document.getElementsByClassName("mySlides");
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        myIndex++;
        if (myIndex > x.length) { myIndex = 1 }
        x[myIndex - 1].style.display = "block";
        setTimeout(carousel, 3500); // Change image every 3.5 seconds
    }
</script>