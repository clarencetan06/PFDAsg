@model PFD_Assignment.Models.Announcements


<h4 class="PageTitle">Create Announcements</h4>
<hr />

<form asp-action="CreateAnnounce">

    <fieldset class="FormContent container">
        <div class="row mb-3 create-fields">
            <label asp-for="AnnouncementTitle" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="AnnouncementTitle" class="form-control" />
                <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3 create-fields">
            <label asp-for="AnnouncementContent" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="AnnouncementContent" class="form-control" />
                <span asp-validation-for="AnnouncementContent" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-5 offset-sm-5">
                <a href="@Url.Action("AdminMain", "Home")" class="btn btn-danger">
                    Return back
                </a>
                <input type="submit" value="Create" class="btn btn-primary" id="submitButton" />
                
            </div>
        </div>


    </fieldset>
</form>

